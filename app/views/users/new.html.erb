<%# Signup Page %>
<div class="min-h-screen bg-gray-100 flex items-center justify-center p-4">
  <!-- Signup Card -->
  <div class="w-full max-w-md bg-white rounded-lg shadow-lg overflow-hidden">
    <!-- Header -->
    <div class="bg-green-50 px-6 py-8 text-center">
      <div class="w-16 h-16 bg-green-500 rounded-full flex items-center justify-center mx-auto mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-white" viewBox="0 0 20 20" fill="currentColor">
          <path d="M8 9a3 3 0 100-6 3 3 0 000 6zM8 11a6 6 0 016 6H2a6 6 0 016-6z" />
        </svg>
      </div>
      <h1 class="text-2xl font-bold text-gray-900 mb-2">Join MessageMe</h1>
      <p class="text-gray-600">Create your account to start chatting</p>
    </div>

    <!-- Signup Form -->
    <div class="px-6 py-8">
      <%= form_with(model: @user, url: signup_path, local: true, data: {turbo: false}, class: "space-y-6") do |form| %>
        <!-- Error Messages -->
        <% if @user.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-lg p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">Please fix the following errors:</h3>
                <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
                  <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        <% end %>

        <div>
          <%= form.label :username, "Username", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :username, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent #{'border-red-300 focus:ring-red-500' if @user.errors[:username].any?}", placeholder: "Choose a username (3-15 characters)" %>
          <% if @user.errors[:username].any? %>
            <p class="mt-1 text-sm text-red-600"><%= @user.errors[:username].first %></p>
          <% end %>
        </div>
        
        <div>
          <%= form.label :password, "Password", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.password_field :password, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent #{'border-red-300 focus:ring-red-500' if @user.errors[:password].any?}", placeholder: "Create a secure password" %>
          <% if @user.errors[:password].any? %>
            <p class="mt-1 text-sm text-red-600"><%= @user.errors[:password].first %></p>
          <% end %>
        </div>
        
        <div>
          <%= form.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.password_field :password_confirmation, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent #{'border-red-300 focus:ring-red-500' if @user.errors[:password_confirmation].any?}", placeholder: "Re-enter your password" %>
          <% if @user.errors[:password_confirmation].any? %>
            <p class="mt-1 text-sm text-red-600"><%= @user.errors[:password_confirmation].first %></p>
          <% end %>
        </div>
        
        <div>
          <%= form.submit "Create Account", class: "w-full bg-green-500 hover:bg-green-600 text-white py-3 px-4 rounded-lg font-medium transition-colors" %>
        </div>
      <% end %>
      
      <!-- Login Link -->
      <div class="mt-6 text-center">
        <p class="text-gray-600">
          Already have an account? 
          <%= link_to "Sign in here", login_path, class: "text-green-500 hover:text-green-600 font-medium" %>
        </p>
      </div>
    </div>
  </div>
</div>
