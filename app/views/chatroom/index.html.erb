<%# Chatroom Page %>
<div class="min-h-screen bg-gray-100">
  <!-- Chat Header -->
  <div class="bg-green-500 text-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 py-3 sm:py-4 flex items-center justify-between">
      <div class="flex items-center gap-2 sm:gap-3 min-w-0 flex-1">
        <div class="min-w-0 flex-1">
          <h1 class="text-lg sm:text-xl font-semibold truncate">Chat Room</h1>
          <p class="text-green-100 text-xs sm:text-sm truncate">Welcome back, <%= current_user.username %></p>
        </div>
      </div>
      <div class="flex items-center gap-1 sm:gap-2 text-xs sm:text-sm flex-shrink-0">
        <span class="inline-block w-2 h-2 bg-green-200 rounded-full"></span>
        <span class="text-green-100 hidden sm:inline">Online</span>
        <span class="text-green-100 sm:hidden">â€¢</span>
      </div>
    </div>
  </div>

  <!-- Main Chat Container -->
  <div class="flex-1 flex items-center justify-center p-2 sm:p-4">
    <div class="w-full max-w-4xl bg-white rounded-lg shadow-lg overflow-hidden h-[calc(100vh-140px)] sm:h-[calc(100vh-120px)] flex flex-col">
      <!-- Messages Area -->
      <div class="flex-1 overflow-y-auto p-2 sm:p-4 space-y-2 sm:space-y-4 bg-gray-50 min-h-[300px] sm:min-h-[400px] max-h-[600px] sm:max-h-[720px]" id="messages-list">
        <%= render @messages %>
      </div>
      
      <!-- Message Input -->
      <div class="bg-white border-t p-2 sm:p-4 flex-shrink-0">
        <%= form_with(model: @message, url: message_path, remote: true, class: "flex gap-2 sm:gap-3", id: "message-form") do |form| %>
          <%= form.text_field :body, placeholder: "Type a message...", class: "flex-1 px-3 sm:px-4 py-2 sm:py-3 text-sm sm:text-base border border-gray-300 rounded-full focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent", id: "message-input" %>
          <%= form.submit "Send", class: "bg-green-500 hover:bg-green-600 text-white px-4 sm:px-6 py-2 sm:py-3 rounded-full text-sm sm:text-base font-medium transition-colors flex-shrink-0" %>
        <% end %>
      </div>
    </div>
  </div>
</div>