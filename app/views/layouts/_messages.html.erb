
<% flash.each do |name, msg| %>
  <% tailwind_class = case name.to_sym
    # when :notice
    #   'bg-blue-50 border border-blue-200 text-blue-800'
    when :notice, :success
      'bg-green-50 border border-green-200 text-green-800'
    when :error, :alert
      'bg-red-50 border border-red-200 text-red-800'
    else
      'bg-gray-50 border border-gray-200 text-gray-800'
    end %>
  <div class="flex justify-center w-full">
    <div class="my-2 w-full mx-6 rounded-lg p-4 shadow-sm flex items-center justify-between <%= tailwind_class %>">
      <span><%= msg %></span>
      <button type="button" class="text-xl font-bold text-gray-400 hover:text-gray-600 focus:outline-none" onclick="this.parentElement.parentElement.style.display='none'" aria-label="Close">&times;</button>
    </div>
  </div>
<% end %>