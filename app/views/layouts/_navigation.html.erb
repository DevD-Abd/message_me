  <nav class="bg-white shadow-sm border-b">
  <div class="max-w-4xl mx-auto px-4 py-3 flex items-center justify-between">
    <!-- Logo/Brand -->
    <div class="flex items-center gap-3">
      <div class="w-8 h-8 bg-green-500 rounded-full flex items-center justify-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-white" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M18 10c0 3.866-3.582 7-8 7a8.841 8.841 0 01-4.083-.98L2 17l1.338-3.123C2.493 12.767 2 11.434 2 10c0-3.866 3.582-7 8-7s8 3.134 8 7zM7 9H5v2h2V9zm8 0h-2v2h2V9zM9 9h2v2H9V9z" clip-rule="evenodd" />
        </svg>
      </div>
      <%= link_to "MessageMe", root_path, class: "font-semibold text-gray-900 text-lg" %>
    </div>

    <!-- Navigation Links -->
    <div class="flex items-center gap-6">
      <% if logged_in? %>
        <%= link_to "Chatroom", root_path, class: "text-gray-600 hover:text-gray-900 font-medium" %>
        <div class="relative inline-block text-left">
          <button type="button" class="flex items-center gap-2 text-gray-600 hover:text-gray-900 font-medium" id="user-menu-button">
            <%= current_user.username %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
          <div class="origin-top-right absolute right-0 mt-2 w-40 rounded-lg shadow-lg bg-white ring-1 ring-gray-200 focus:outline-none z-50 hidden" role="menu" id="user-dropdown">
            <div class="py-2">
              <%= button_to "Logout", logout_path, method: :delete, class: "block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 border-0 bg-transparent" %>
            </div>
          </div>
        </div>
      <% else %>
        <%= link_to "Login", login_path, class: "bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded-lg font-medium transition-colors" %>
      <% end %>
    </div>
    </div>
  </div>
  
  <script>
    // Simple dropdown toggle
    document.addEventListener('DOMContentLoaded', function() {
      const btn = document.getElementById('user-menu-button');
      const menu = document.getElementById('user-dropdown');
      
      if (btn && menu) {
        btn.addEventListener('click', function(e) {
          e.preventDefault();
          menu.classList.toggle('hidden');
        });
        
        document.addEventListener('click', function(e) {
          if (!btn.contains(e.target) && !menu.contains(e.target)) {
            menu.classList.add('hidden');
          }
        });
      }
    });
  </script>
