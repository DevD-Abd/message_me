        <%= link_to "Sign Up", "#", class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
        <%= button_to "Logout", logout_path, method: :delete, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"  %>
