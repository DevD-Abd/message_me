<%# Login Page %>
<div class="min-h-screen flex flex-col items-center bg-gradient-to-br from-indigo-100 via-white to-indigo-200 py-12 px-4">
  <!-- Top Welcome and Icon -->
  <div class="flex flex-col items-center mb-10">
    <h1 class="text-2xl md:text-3xl font-bold text-gray-800 mb-2 text-center">Welcome to MessageMe - a complete Chat App</h1>
    <div class="bg-indigo-100 rounded-full p-3 shadow mb-2">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 512" class="h-10 w-10 text-indigo-600" fill="currentColor">
        <path d="M96 64c0-17.7 14.3-32 32-32l320 0 64 0c70.7 0 128 57.3 128 128s-57.3 128-128 128l-32 0c0 53-43 96-96 96l-192 0c-53 0-96-43-96-96L96 64zM480 224l32 0c35.3 0 64-28.7 64-64s-28.7-64-64-64l-32 0 0 128zM32 416l512 0c17.7 0 32 14.3 32 32s-14.3 32-32 32L32 480c-17.7 0-32-14.3-32-32s14.3-32 32-32z"/>
      </svg>
    </div>
    <div class="text-lg font-medium text-gray-700">Log in to continue</div>
  </div>

  <!-- Card with Login and Signup -->
  <div class="bg-white/90 justify-between backdrop-blur rounded-2xl shadow-2xl flex flex-col md:flex-row w-full max-w-5xl overflow-hidden border border-gray-100">
    <!-- Left: Login Form -->
    <div class="flex-1 p-10 flex flex-col justify-center min-w-[260px] max-w-lg w-full">
      <h2 class="text-2xl font-semibold text-gray-800 mb-6 text-center md:text-left">Login</h2>
      <%= form_with url: login_path, local: true, class: "space-y-6" do |form| %>
        <div>
          <%= form.label :username, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :username, class: "w-full px-4 py-3 border border-gray-200 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-400 focus:border-indigo-400 bg-gray-50", placeholder: "Enter your username" %>
        </div>
        <div>
          <%= form.label :password, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.password_field :password, class: "w-full px-4 py-3 border border-gray-200 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-400 focus:border-indigo-400 bg-gray-50", placeholder: "Enter your password" %>
        </div>
        <div>
          <%= form.submit "Sign In", class: "w-full py-3 px-4 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg font-semibold shadow transition" %>
        </div>
      <% end %>
    </div>
    <!-- Right: Signup Button -->
    <div class="bg-indigo-50 flex flex-col justify-center items-center p-10 md:w-96 border-t md:border-t-0 md:border-l border-gray-100">
      <h3 class="text-xl font-semibold text-indigo-700 mb-6 text-center">New here?</h3>
      <a href="#" class="w-full block text-center py-3 px-4 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg font-semibold shadow transition text-lg">Sign Up</a>
    </div>
  </div>
</div>